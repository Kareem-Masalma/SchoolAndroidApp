<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingTop="8dp"
        android:background="@color/role_blue">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/titleText"
            style="@style/HeaderTitle"
            android:text="@string/send_assignments" />
    </FrameLayout>

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Title -->
            <TextView style="@style/SectionTitle" android:text="@string/title" />
            <EditText
                android:id="@+id/editTitle"
                style="@style/FormEditText"
                android:hint="@string/enter_assignment_title" />

            <!-- Class Spinner -->
            <TextView style="@style/SectionTitle" android:text="@string/select_subject" android:layout_marginTop="24dp" />
            <LinearLayout
                android:id="@+id/spinnerSubjectContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_border"
                android:padding="8dp"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/spinnerClass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/spinner_arrow"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Details -->
            <TextView style="@style/SectionTitle" android:text="@string/details" android:layout_marginTop="24dp" />
            <EditText
                android:id="@+id/editDetails"
                style="@style/FormEditText"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="@string/enter_assignment_details"
                android:inputType="textMultiLine" />

            <!-- Attachments -->
            <TextView style="@style/SectionTitle" android:text="@string/attachments" android:layout_marginTop="24dp" />
            <Button
                android:id="@+id/btnSelectFile"
                style="@style/ButtonPrimary.Teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_file" />

            <!-- Selected File Info -->
            <!-- Selected Files Text -->
            <TextView
                android:id="@+id/textSelectedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/textPercentageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/percentage_of_grade"
                android:layout_marginTop="12dp"
                android:padding="5dp" />

            <EditText
                android:id="@+id/editPercentage"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:hint="@string/e_g_20_0"
                android:inputType="numberDecimal" />




            <!-- Deadline -->
            <TextView style="@style/SectionTitle" android:text="@string/deadline" android:layout_marginTop="24dp" />
            <LinearLayout
                android:id="@+id/deadlineField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_border"
                android:padding="8dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editDeadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/select_deadline"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/iconDeadline"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            <!-- Reminder Time -->
            <TextView
                style="@style/SectionTitle"
                android:text="Reminder Time"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:id="@+id/reminderTimeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_border"
                android:padding="8dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editReminderTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Reminder Time"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/iconReminderTime"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="end">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/ButtonPrimary.Teacher"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/btnSend"
                    style="@style/ButtonPrimary.Teacher"
                    android:text="@string/send"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
