<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subjectsAct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/subjectsTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="28dp"
        android:text="@string/add_subject"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subject_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/subNameET"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="@string/enter_subject_name" />

    <TextView
        android:id="@+id/assignGradeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/assign_grade"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/assignGradeSP"
        android:layout_width="match_parent"
        android:layout_height="51dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/cancleBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FFA500"
            android:text="@string/cancel_sub" />

        <Button
            android:id="@+id/addBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFA500"
            android:text="@string/add_sub" />
    </LinearLayout>

</LinearLayout>
