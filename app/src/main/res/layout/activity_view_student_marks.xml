<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#F0FFF4">

    <TextView
        android:id="@+id/subjectTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subject_math"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:textColor="#2E7D32"/>


    <RadioGroup
        android:id="@+id/resultFilterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="8dp"
            android:text="@string/all_RB"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioAssignments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/assignments_RB"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioExams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/exams_RB"
            android:textStyle="bold" />
    </RadioGroup>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/marksRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="30dp" />

    <TextView
        android:id="@+id/totalMarkTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:textColor="#2E7D32"/>

    <Button
        android:id="@+id/btnBackToCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_student_courses"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginBottom="16dp" />
</LinearLayout>