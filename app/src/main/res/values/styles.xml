<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Registrar" parent="AppTheme">
        <item name="colorPrimary">@color/role_orange</item>
    </style>

    <style name="AppTheme.Teacher" parent="AppTheme">
        <item name="colorPrimary">@color/role_blue</item>
    </style>

    <style name="AppTheme.Student" parent="AppTheme">
        <item name="colorPrimary">@color/role_green</item>
    </style>


    <style name="HeaderTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RoleRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
