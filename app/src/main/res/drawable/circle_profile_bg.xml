<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White fill (to avoid odd corners if the actual image isn't perfectly square) -->
    <solid android:color="@android:color/white" />

    <!-- Thin colored border around the circle -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

</shape>
